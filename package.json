{
    "name": "kinocms",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint",
        "test": "jest"
    },
    "dependencies": {
        "admin-lte": "^3.1.0",
        "bootstrap": "^3.4.1",
        "core-js": "^3.6.5",
        "firebase": "^8.7.1",
        "lodash": "^4.17.21",
        "register-service-worker": "^1.7.1",
        "vue": "^2.6.11",
        "vue-i18n": "^8.25.0",
        "vue-router": "^3.2.0",
        "vue-toast-notification": "^0.6.2",
        "vuelidate": "^0.7.6",
        "vuex": "^3.4.0"
    },
    "devDependencies": {
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@vue/cli-plugin-babel": "~4.5.0",
        "@vue/cli-plugin-eslint": "~4.5.0",
        "@vue/cli-plugin-pwa": "~4.5.0",
        "@vue/cli-plugin-router": "~4.5.0",
        "@vue/cli-plugin-vuex": "~4.5.0",
        "@vue/cli-service": "~4.5.0",
        "@vue/eslint-config-prettier": "^6.0.0",
        "@vue/test-utils": "^1.2.2",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^27.0.6",
        "eslint": "^6.8.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-vue": "^6.2.2",
        "jest": "^27.0.6",
        "node-sass": "^4.12.0",
        "prettier": "^2.2.1",
        "sass-loader": "^8.0.2",
        "vue-jest": "^3.0.7",
        "vue-template-compiler": "^2.6.11"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/recommended",
            "eslint:recommended",
            "@vue/prettier"
        ],
        "rules": {
            "comma-dangle": [
                "warn",
                "only-multiline"
            ],
            "prettier/prettier": [
                "warn",
                {
                    "tabWidth": 4,
                    "semi": true,
                    "singleQuote": false
                }
            ]
        },
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "jsdom",
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "transform": {
            ".*\\.(vue)$": "vue-jest",
            ".*\\.(js)$": "babel-jest"
        },
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ]
}
